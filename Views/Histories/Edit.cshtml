@model IEnumerable<BugTracker.Models.History>

@{
    ViewBag.Title = "Details";
}

<h2>Ticket History</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.AuthorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Updated)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.Author.FirstName)
                @Html.DisplayFor(modelItem => item.Ticket.Author.LastName)

            </td>
            <td>
                @Html.Raw(item.Body)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)

            </td>
          
        </tr>
    }

</table>



