@model BugTracker.Models.ChangeDisplayNameViewModel
@{
    ViewBag.Title = "Change Display Name";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeDisplayName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.Label("Current Display Name", new { @class = "col-md-3 control-label" })
        <div class="col-md-8">
            @Html.PasswordFor(m => m.OldDisplayName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("New Display Name", new { @class = "col-md-3 control-label" })
        <div class="col-md-8">
            @Html.PasswordFor(m => m.NewDisplayName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Confirm New Display Name", new { @class = "col-md-3 control-label" })
        <div class="col-md-8">
            @Html.PasswordFor(m => m.ConfirmDisplayName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Display Name" class="btn btn-success" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}